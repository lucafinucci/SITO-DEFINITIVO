# ===========================================
# AREA CLIENTI (PHP Backend - MySQL/MariaDB)
# ===========================================

# Database Configuration
DB_HOST=localhost
DB_NAME=finch_ai_clienti
DB_USER=root
DB_PASS=

# Security
SESSION_LIFETIME=7200
CSRF_TOKEN_LIFETIME=3600

# Rate Limiting
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900

# API Configuration
KPI_API_ENDPOINT=https://app.finch-ai.it/api/kpi/documenti
KPI_API_KEY=

# Application
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
VITE_AREA_CLIENTI_URL=/area-clienti/login.php

# MFA/TOTP
MFA_ISSUER=Finch-AI
MFA_DIGITS=6
MFA_PERIOD=30

# ===========================================
# PAYLOAD CMS (PostgreSQL)
# ===========================================

# CMS URL for frontend API calls
VITE_CMS_URL=http://localhost:3001

# Payload Secret (min 32 characters) - CHANGE IN PRODUCTION!
PAYLOAD_SECRET=your-very-secure-secret-key-min-32-chars-change-me

# PostgreSQL Database (separate from MySQL)
POSTGRES_PASSWORD=payload_secret
# DATABASE_URI is constructed in docker-compose.yml

# ===========================================
# HETZNER OBJECT STORAGE (S3-compatible)
# ===========================================

S3_ENDPOINT=https://fsn1.your-objectstorage.com
S3_BUCKET=finch-ai-media
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=fsn1

# ===========================================
# PRODUCTION URLS
# ===========================================

SITE_URL=https://finch-ai.it
CMS_URL=https://finch-ai.it
